*/

#include <iostream>
using namespace std;

int main()

{
	double pisteet = 0.00; //alustetaan muuttujat

	cout << "Tama ohjelma kertoo sinulle arvosanasi" << endl;
	cout << "Syota saamasi pistemaara" << endl;
	cin >> pisteet; //kayttaja syottaa maaran

	if (pisteet >= 27 && pisteet <= 39.6) //tassa lasketaan arvosana erillisen asteikon mukaan 
		cout << "Arvosanasi on 1." << endl;
	if (pisteet >= 40.5 && pisteet <= 47.7)
		cout << "Arvosanasi on 2." << endl;
	if (pisteet >= 54 && pisteet <= 66.6)
		cout << "Arvosanasi on 3." << endl;
	if (pisteet >= 67.5 && pisteet <= 80.1)
		cout << "Arvosanasi on 4." << endl;
	if (pisteet >= 81)
		cout << "Arvosanasi on 5." << endl;
	if (pisteet <= 26)
		cout << "Kurssi on hylatty" << endl;

	return 0;
}
