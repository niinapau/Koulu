#include <iostream>
using namespace std;

float pintaAla(float pituus, float leveys) //esitellään funktio
{
	return (pituus * leveys);
}

int main()
{
	float ala1, pituus, leveys; //alustetaan muuttujat
	pituus = 5110.311;
	leveys = 10;
	ala1 = pintaAla(pituus, leveys);

	cout << "Suorakulmion pituus : " << pituus << endl; //tulostus
	cout << "leveys :  " << leveys << endl;
	cout << "pinta-ala : " << ala1 << endl;
}
