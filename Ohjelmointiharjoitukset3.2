#include <iostream>
using namespace std;
float summaa(float luku1, float luku2) //esitell채채n funktiot
{
	return (luku1 + luku2);
}
float erottaa(float luku1, float luku2)
{
	return (luku1 - luku2);
}
void main(void) //p채채ohjelma
{
	float luku1;
	float luku2;
	float summa;
	float erotus;
	cout << "Anna 1. desimaaliluku: ";
	cin >> luku1;
	cout << "Anna 2. desimaaliluku: ";
	cin >> luku2;
	summa = summaa(luku1, luku2); //kutsutaan aliohjelmaa
	erotus = erottaa(luku1, luku2);
	cout << "Lukujen summa on: " << summa << endl;
	cout << "Lukujen erotus on: " << erotus << endl;
	//return 0;
}
