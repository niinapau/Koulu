#include <iostream>
int main()
{
	std::cout << "Syötä numero: ";
	int x;
	std::cin >> x;
	if (x > 10)
	{
		// Tästä alkaa lohko
		std::cout << "Syötit luvun " << x << "\n";
		std::cout << x << " on suurempi kuin 10";
	}
	else
	{
		// Tästä alkaa lohko
		std::cout << "Syötit luvun " << x << "\n";
		std::cout << x << "on pienempi kuin 10";
	}
	return 0;
}
