*/

#include <iostream>
#include <string>

using namespace std;


int main()
{ //taulukon maarittely
	const int koko = 10;
	int kokoLukuTaulukko[koko];

	//for-silmukassa luetaan kayttajan syottamia kokonaislukuja indeksittain taulukkoon
	
	for (int i = 0; i < koko; i++)
	{
		cout << "Anna kokonaisluku taulukkoon. " << endl;
		cin >> kokoLukuTaulukko[i];

	}
	
	//for-silmukassa tulostetaan tiedot indeksittain

	for (int i = 0; i < koko; i++)
	{
		cout << "Alkion " << "[" << i << "]" << " sisalto on " << kokoLukuTaulukko[i] << endl;
	}
	return 0;
}
