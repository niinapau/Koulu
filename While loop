#include <iostream> //io-virta kÃ¤yttÃ¶Ã¶n
using namespace std;

int main()
{
	int laskuri = 0; //suoritetaan niin kauan kuin laskuri on < 10
	while (laskuri < 10)
	{
		cout << laskuri << endl;
		laskuri++; //kasvatetaan laskurin summaa yhdellÃ¤

	}

	int laskuri2 = 0;
	do
	{
		cout << laskuri2 << endl;
		laskuri2++; //laskurimuuttujan pÃ¤ivitys
	} while (laskuri2 < 10);

	return 0;
}
